<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mainPageButton"
                    android:layout_width="wrap_content"
                    android:backgroundTint="#AEBD93"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Main Page" />

                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#AEBD93"
                    android:layout_weight="1"
                    android:text="Register" />

                <Button
                    android:id="@+id/logoutButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#AEBD93"
                    android:layout_weight="1"
                    android:text="Logout" />
            </LinearLayout>

            <TextView
                android:id="@+id/formPageTextView"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:gravity="center"
                android:text="Fill out the form"
                android:textSize="20sp"
                android:textFontWeight="@integer/material_motion_duration_short_2"/>

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:ems="10"
                android:hint="Enter a email:"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/phoneEditText"
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:ems="10"
                android:hint="Enter a phonenumber:"
                android:inputType="number" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:ems="10"
                android:hint="Enter your firstname"
                android:inputType="text" />

            <EditText
                android:id="@+id/lastnameEditText"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:ems="10"
                android:hint="Enter your lastname"
                android:inputType="text" />

            <CheckBox
                android:id="@+id/driverLicenseBox"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:text="Do you have a driverlicense?" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:text="Button" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>